    { "type": "powershell", "inline": [ "chocolatey install -y puppet" ] },
    { "type": "windows-shell", "script": "./scripts/install-puppet-modules.cmd" },

    { "type": "powershell", "inline": [ "psexec -accepteula -s schtasks /change /tn \"\\Microsoft\\Windows\\TaskScheduler\\Maintenance Configurator\" /Disable" ], "elevated_user": "vagrant", "elevated_password": "vagrant" },
    { "type": "powershell", "inline": [ "imdisk -a -m I: -f \\\\psf\\daas-cache\\CIC_2015_R3.iso" ],
      "only": [ "parallels-windows-iso" ]
    },
    { "type": "powershell", "inline": [ "imdisk -a -m I: -f \\\\vboxsrv\\daas-cache\\CIC_2015_R3.iso" ],
      "only": [ "virtualbox-windows-iso" ]
    },
    { "type": "powershell", "inline": [ "imdisk -a -m I: -f \"\\\\vmware-host\\Shared Folders\\daas-cache\\CIC_2015_R3.iso\"" ],
      "only": [ "vmware-windows-iso" ]
    },
    { "type": "windows-shell", "script": "./scripts/install-ininextras.cmd" },
    { "type": "powershell",  "script": "./scripts/install-dotnet35.ps1", "elevated_user": "vagrant", "elevated_password": "vagrant" },
    { "type": "powershell",  "script": "./scripts/install-icserver.ps1", "elevated_user": "vagrant", "elevated_password": "vagrant" },
    {
      "type":     "wait",
      "duration": "15m",
      "message":  "Giving ICServer install some air to breathe for 15 minutes..."
    },
    { "type": "powershell", "script": "./scripts/check-icserver.ps1" },
    { "type": "powershell", "script": "./scripts/install-icfirmware.ps1" },
    { "type": "powershell", "inline": [ "imdisk -d -m I:" ] },
    { "type": "powershell", "inline": [ "imdisk -a -m I: -f \\\\psf\\daas-cache\\CIC_2015_R3_Patch2.iso" ],
      "only": [ "parallels-windows-iso" ], "pause_before": "20s"
    },
    { "type": "powershell", "inline": [ "imdisk -a -m I: -f \\\\vboxsrv\\daas-cache\\CIC_2015_R3_Patch2.iso" ],
      "only": [ "virtualbox-windows-iso" ], "pause_before": "20s"
    },
    { "type": "powershell", "inline": [ "imdisk -a -m I: -f \"\\\\vmware-host\\Shared Folders\\daas-cache\\CIC_2015_R3_Patch2.iso\"" ],
      "only": [ "vmware-windows-iso" ], "pause_before": "20s"
    },
    { "type": "powershell", "script": "./scripts/install-icserver-patch.ps1", "pause_before": "20s" },
    { "type": "powershell", "script": "./scripts/install-icfirmware-patch.ps1", "pause_before": "20s" },
    { "type": "powershell", "inline": [ "imdisk -d -m I:" ] },
    { "type": "powershell", "script": "./scripts/Backup-Logs.ps1" }
