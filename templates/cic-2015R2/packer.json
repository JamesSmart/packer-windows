        "http://files/public/ISO/9600.16384.WINBLUE_RTM.130821-1623_X64FRE_SERVER_EVAL_EN-US-IRM_SSS_X64FREE_EN-US_DV5.ISO",
        "http://download.microsoft.com/download/6/2/A/62A76ABB-9990-4EFC-A4FE-C7D698DAEB96/9600.16384.WINBLUE_RTM.130821-1623_X64FRE_SERVER_EVAL_EN-US-IRM_SSS_X64FREE_EN-US_DV5.ISO"
      ],
      "iso_checksum_type":      "md5",
      "iso_checksum":           "458ff91f8abc21b75cb544744bf92e6a",
      "boot_wait":              "30s",
      "ssh_username":           "vagrant",
      "ssh_password":           "vagrant",
      "ssh_host_port_min":      2222,
      "ssh_host_port_max":      2229,
      "ssh_wait_timeout":       "20m",
      "shutdown_command":       "shutdown /s /t 1 /f /d p:4:1 /c 'Packer Shutdown'",
      "http_directory":         "{{user `http_directory`}}",
      "http_port_min":          8116,
      "http_port_max":          8116,
      "format":                 "qcow2",
      "headless":               false,
      "accelerator":            "kvm",
      "net_device":             "virtio-net",
      "disk_interface":         "virtio",
      "disk_size":              "{{user `disk_size`}}",
      "floppy_files": [
        "./templates/{{user `template`}}/Autounattend.xml",
        "./data/drivers/virtio-win-0.1-100/win7/amd64/*",
        "./scripts/00-run-all-scripts.cmd",
        "./scripts/01-config-os.cmd",
        "./scripts/02-config-posh.cmd",
        "./scripts/03-config-winrm.cmd",
        "./scripts/04-install-openssh.cmd",
        "./scripts/99-start-services.cmd"
      ],
      "qemuargs":
      [
        [ "-m", "{{user `mem_size`}}M" ]
      ]
    },
    {
      "type":                "parallels-windows-iso",
      "vm_name":             "packer_CIC_2015R2",
      "guest_os_type":       "win-2012",
      "iso_urls": [
        "./iso/9600.16384.WINBLUE_RTM.130821-1623_X64FRE_SERVER_EVAL_EN-US-IRM_SSS_X64FREE_EN-US_DV5.ISO",
        "/var/cache/daas/9600.16384.WINBLUE_RTM.130821-1623_X64FRE_SERVER_EVAL_EN-US-IRM_SSS_X64FREE_EN-US_DV5.ISO",
        "http://files/public/ISO/9600.16384.WINBLUE_RTM.130821-1623_X64FRE_SERVER_EVAL_EN-US-IRM_SSS_X64FREE_EN-US_DV5.ISO",
        "http://download.microsoft.com/download/6/2/A/62A76ABB-9990-4EFC-A4FE-C7D698DAEB96/9600.16384.WINBLUE_RTM.130821-1623_X64FRE_SERVER_EVAL_EN-US-IRM_SSS_X64FREE_EN-US_DV5.ISO"
      ],
      "iso_checksum_type":      "md5",
      "iso_checksum":           "458ff91f8abc21b75cb544744bf92e6a",
      "boot_wait":              "30s",
      "headless":               false,
      "winrm_username":         "vagrant",
      "winrm_password":         "vagrant",
      "winrm_wait_timeout":     "20m",
      "shutdown_command":       "shutdown /s /t 5 /f /d p:4:1 /c \"Packer Shutdown\"",
      "parallels_tools_flavor": "win",
      "parallels_tools_mode":   "attach",
      "disk_size":              "{{user `disk_size`}}",
      "floppy_files": [
        "./templates/{{user `template`}}/Autounattend.xml",
        "./scripts/00-run-all-scripts.cmd",
        "./scripts/01-config-os.cmd",
        "./scripts/02-config-posh.cmd",
        "./scripts/03-config-winrm.cmd",
        "./scripts/04-install-imdisk.cmd",
        "./scripts/99-start-services.cmd"
      ],
      "prlctl":
      [
        ["set", "{{.Name}}", "--memsize",                "{{user `mem_size`}}"],
        ["set", "{{.Name}}", "--cpus",                   "{{user `cpus`}}"],
        ["set", "{{.Name}}", "--efi-boot",               "off"],
        ["set", "{{.Name}}", "--shared-profile",         "off"],
        ["set", "{{.Name}}", "--shared-cloud",           "off"],
        ["set", "{{.Name}}", "--sh-app-guest-to-host",   "off"],
        ["set", "{{.Name}}", "--sh-app-host-to-guest",   "off"],
        ["set", "{{.Name}}", "--shf-host-add",           "daas-cache", "--path", "/var/cache/daas", "--mode", "ro", "--enable"]
      ]
    },
    {
      "type":                "vmware-windows-iso",
      "vm_name":             "packer_CIC_2015R2",
      "guest_os_type":       "windows8srv-64",
      "iso_urls": [
        "./iso/9600.16384.WINBLUE_RTM.130821-1623_X64FRE_SERVER_EVAL_EN-US-IRM_SSS_X64FREE_EN-US_DV5.ISO",
        "/var/cache/daas/9600.16384.WINBLUE_RTM.130821-1623_X64FRE_SERVER_EVAL_EN-US-IRM_SSS_X64FREE_EN-US_DV5.ISO",
        "http://files/public/ISO/9600.16384.WINBLUE_RTM.130821-1623_X64FRE_SERVER_EVAL_EN-US-IRM_SSS_X64FREE_EN-US_DV5.ISO",
        "http://download.microsoft.com/download/6/2/A/62A76ABB-9990-4EFC-A4FE-C7D698DAEB96/9600.16384.WINBLUE_RTM.130821-1623_X64FRE_SERVER_EVAL_EN-US-IRM_SSS_X64FREE_EN-US_DV5.ISO"
      ],
      "iso_checksum_type":   "md5",
      "iso_checksum":        "458ff91f8abc21b75cb544744bf92e6a",
      "boot_wait":           "30s",
      "headless":            true,
      "winrm_username":      "vagrant",
      "winrm_password":      "vagrant",
      "winrm_wait_timeout":  "20m",
      "shutdown_command":    "shutdown /s /t 5 /f /d p:4:1 /c \"Packer Shutdown\"",
      "tools_upload_flavor": "windows",
      "disk_size":           "{{user `disk_size`}}",
      "floppy_files": [
        "./templates/{{user `template`}}/Autounattend.xml",
        "./scripts/00-run-all-scripts.cmd",
        "./scripts/01-config-os.cmd",
        "./scripts/02-config-posh.cmd",
        "./scripts/03-config-winrm.cmd",
        "./scripts/04-install-imdisk.cmd",
        "./scripts/99-start-services.cmd"
      ],
      "vmx_data":
      {
        "memsize":              "{{user `mem_size`}}",
        "numvcpus":             "{{user `cpus`}}",
        "cpuid.coresPerSocket": "1",
        "scsi0.virtualDev":     "lsisas1068"
      }
    },
    {
      "type":                 "virtualbox-windows-iso",
      "vm_name":              "packer_CIC_2015R2",
      "guest_os_type":        "Windows2012_64",
      "iso_urls": [
        "./iso/9600.16384.WINBLUE_RTM.130821-1623_X64FRE_SERVER_EVAL_EN-US-IRM_SSS_X64FREE_EN-US_DV5.ISO",
        "/var/cache/daas/9600.16384.WINBLUE_RTM.130821-1623_X64FRE_SERVER_EVAL_EN-US-IRM_SSS_X64FREE_EN-US_DV5.ISO",
        "http://files/public/ISO/9600.16384.WINBLUE_RTM.130821-1623_X64FRE_SERVER_EVAL_EN-US-IRM_SSS_X64FREE_EN-US_DV5.ISO",
        "http://download.microsoft.com/download/6/2/A/62A76ABB-9990-4EFC-A4FE-C7D698DAEB96/9600.16384.WINBLUE_RTM.130821-1623_X64FRE_SERVER_EVAL_EN-US-IRM_SSS_X64FREE_EN-US_DV5.ISO"
      ],
      "iso_checksum_type":    "md5",
      "iso_checksum":         "458ff91f8abc21b75cb544744bf92e6a",
      "boot_wait":            "30s",
      "headless":             false,
      "winrm_username":       "vagrant",
      "winrm_password":       "vagrant",
      "winrm_wait_timeout":   "20m",
      "shutdown_command":     "shutdown /s /t 5 /f /d p:4:1 /c \"Packer Shutdown\"",
      "guest_additions_mode": "attach",
      "disk_size":            "{{user `disk_size`}}",
      "floppy_files":
      [
        "./templates/{{user `template`}}/Autounattend.xml",
        "./scripts/_packer_config.cmd",
        "./scripts/00-run-all-scripts.cmd",
        "./scripts/01-config-os.cmd",
        "./scripts/02-config-posh.cmd",
        "./scripts/03-config-winrm.cmd",
        "./scripts/04-install-imdisk.cmd",
        "./scripts/99-start-services.cmd",
        "./data/vagrant.pub"
      ],
      "vboxmanage":
      [
        ["modifyvm", "{{.Name}}", "--ioapic", "on"],
        ["modifyvm", "{{.Name}}", "--memory", "{{user `mem_size`}}"],
        ["modifyvm", "{{.Name}}", "--cpus",   "{{user `cpus`}}"],
        ["modifyvm", "{{.Name}}", "--vram",   "64"],
        ["setextradata", "{{.Name}}", "VBoxInternal/CPUM/CMPXCHG16B", "1"],
        ["sharedfolder", "add", "{{.Name}}", "--name", "daas-cache", "--hostpath", "/var/cache/daas", "--automount", "--readonly"]
      ],
      "vboxmanage_post":
      [
        ["sharedfolder", "remove", "{{.Name}}", "--name", "daas-cache"]
      ]
    }
  ],
  "provisioners":
  [
    {
      "type":        "file",
      "source":      "./data/inin-extras.zip",
      "destination": "C:/Windows/Temp/inin-extras.zip"
    },
    {
      "type":        "file",
      "source":      "./scripts/Get-Checksum.ps1",
      "destination": "C:/tools/sysinternals/Get-Checksum.ps1"
    },
    {
      "type":        "file",
      "source":      "./data/GeoTrust_Global_CA.pem",
      "destination": "C:/Windows/Temp/GeoTrust_Global_CA.pem"
    },
    { "type": "powershell", "inline": [ "Write-Host 'Configuring passwords' ; net accounts /maxpwage:unlimited" ] },
    { "type": "powershell", "script": "./scripts/install-vmhost-additions.ps1" },
    { "type": "restart-windows" },

    { "type": "powershell", "script": "./scripts/install-chocolatey.ps1" },
    { "type": "powershell", "inline": [ "chocolatey install -y dotnet3.5" ] },
    { "type": "powershell", "inline": [ "chocolatey install -y sysinternals" ] },
    { "type": "powershell", "inline": [ "chocolatey install -y git" ] },
    { "type": "powershell", "inline": [ "chocolatey install -y vim" ] },
    { "type": "powershell", "inline": [ "chocolatey install -y classic-shell" ] },
    { "type": "powershell", "inline": [ "chocolatey install -y puppet" ] },
    { "type": "windows-shell", "script": "./scripts/install-puppet-modules.cmd" },

    { "type": "powershell", "inline": [ "imdisk -a -m Z: -f \\\\psf\\daas-cache\\CIC_2015_R2.iso" ],
      "only": [ "parallels-windows-iso" ]
    },
    { "type": "powershell", "inline": [ "imdisk -a -m Z: -f \\\\vboxsvr\\daas-cache\\CIC_2015_R2.iso" ],
      "only": [ "virtualbox-windows-iso" ]
    },
    { "type": "powershell", "inline": [ "imdisk -a -m Z: -f \\\\.host\\daas-cache\\CIC_2015_R2.iso" ],
      "only": [ "vmware-windows-iso" ]
    },
    { "type": "windows-shell", "script": "./scripts/install-ininextras.cmd" },
    { "type": "powershell",  "script": "./scripts/install-icserver.ps1" },
    {
      "type":     "wait",
      "duration": "15m",
      "message":  "Giving ICServer install some air to breathe for 15 minutes..."
    },
    { "type": "powershell", "script": "./scripts/check-icserver.ps1" },
    { "type": "powershell", "script": "./scripts/install-icfirmware.ps1" },
    { "type": "powershell", "inline": [ "imdisk -d -m Z:" ] },
    {
      "type": "powershell", "inline": [ "Write-Host 'Removing VMWare tools ISO' ; Remove-Item -Path C:/Users/vagrant/windows.iso -Force" ],
      "only": [ "vmware-windows-iso" ]
    }
  ],
  "post-processors":
  [
    {
      "type": "vagrant",
      "keep_input_artifact": false,
      "compression_level":   1,
      "vagrantfile_template": "./templates/{{user `template`}}/vagrantfile.template",
      "output": "./boxes/{{user `template`}}/{{.Provider}}/{{user `template`}}-{{user `version`}}.box"
    }
  ]
}
