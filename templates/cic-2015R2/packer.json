        "./scripts/03-install-chocolatey.cmd",
        "./scripts/04-install-openssh.cmd",
        "./scripts/99-start-services.cmd"
      ],
      "prlctl":
      [
        ["set", "{{.Name}}", "--memsize", "{{user `mem_size`}}"],
        ["set", "{{.Name}}", "--cpus",   "{{user `cpus`}}"],
        ["set", "{{.Name}}", "--efi-boot",   "off"]
      ]
    },
    {
      "type":                "vmware-iso",
      "vm_name":             "packer_CIC_2015R2",
      "guest_os_type":       "windows8srv-64",
      "iso_urls": [
        "./iso/9600.16384.WINBLUE_RTM.130821-1623_X64FRE_SERVER_EVAL_EN-US-IRM_SSS_X64FREE_EN-US_DV5.ISO",
        "/var/cache/daas/9600.16384.WINBLUE_RTM.130821-1623_X64FRE_SERVER_EVAL_EN-US-IRM_SSS_X64FREE_EN-US_DV5.ISO",
        "http://files/public/ISO/9600.16384.WINBLUE_RTM.130821-1623_X64FRE_SERVER_EVAL_EN-US-IRM_SSS_X64FREE_EN-US_DV5.ISO",
        "http://download.microsoft.com/download/6/2/A/62A76ABB-9990-4EFC-A4FE-C7D698DAEB96/9600.16384.WINBLUE_RTM.130821-1623_X64FRE_SERVER_EVAL_EN-US-IRM_SSS_X64FREE_EN-US_DV5.ISO"
      ],
      "iso_checksum_type":   "md5",
      "iso_checksum":        "458ff91f8abc21b75cb544744bf92e6a",
      "ssh_username":        "vagrant",
      "ssh_password":        "vagrant",
      "ssh_wait_timeout":    "20m",
      "shutdown_command":    "shutdown /s /t 1 /f /d p:4:1 /c 'Packer Shutdown'",
      "tools_upload_flavor": "windows",
      "disk_size":           "{{user `disk_size`}}",
      "floppy_files": [
        "./templates/{{user `template`}}/Autounattend.xml",
        "./scripts/00-run-all-scripts.cmd",
        "./scripts/01-config-posh.cmd",
        "./scripts/02-config-winrm.cmd",
        "./scripts/03-install-chocolatey.cmd",
        "./scripts/04-install-openssh.cmd",
        "./scripts/99-start-services.cmd"
      ],
      "vmx_data":
      {
        "memsize":              "{{user `mem_size`}}",
        "numvcpus":             "{{user `cpus`}}",
        "cpuid.coresPerSocket": "1",
        "scsi0.virtualDev":     "lsisas1068"
      }
    },
    {
      "type":                 "virtualbox-iso",
      "vm_name":              "packer_CIC_2015R2",
      "guest_os_type":        "Windows2012_64",
      "iso_urls": [
        "./iso/9600.16384.WINBLUE_RTM.130821-1623_X64FRE_SERVER_EVAL_EN-US-IRM_SSS_X64FREE_EN-US_DV5.ISO",
        "/var/cache/daas/9600.16384.WINBLUE_RTM.130821-1623_X64FRE_SERVER_EVAL_EN-US-IRM_SSS_X64FREE_EN-US_DV5.ISO",
        "http://files/public/ISO/9600.16384.WINBLUE_RTM.130821-1623_X64FRE_SERVER_EVAL_EN-US-IRM_SSS_X64FREE_EN-US_DV5.ISO",
        "http://download.microsoft.com/download/6/2/A/62A76ABB-9990-4EFC-A4FE-C7D698DAEB96/9600.16384.WINBLUE_RTM.130821-1623_X64FRE_SERVER_EVAL_EN-US-IRM_SSS_X64FREE_EN-US_DV5.ISO"
      ],
      "iso_checksum_type":    "md5",
      "iso_checksum":         "458ff91f8abc21b75cb544744bf92e6a",
      "headless":             false,
      "ssh_username":         "vagrant",
      "ssh_password":         "vagrant",
      "ssh_wait_timeout":     "20m",
      "shutdown_command":     "shutdown /s /t 5 /d p:4:1 /c \"Packer Shutdown\"",
      "guest_additions_mode": "upload",
      "disk_size":            "{{user `disk_size`}}",
      "floppy_files":
      [
        "./templates/{{user `template`}}/Autounattend.xml",
        "./scripts/_packer_config.cmd",
        "./scripts/00-run-all-scripts.cmd",
        "./scripts/01-config-posh.cmd",
        "./scripts/02-config-winrm.cmd",
        "./scripts/03-install-chocolatey.cmd",
        "./scripts/04-install-openssh.cmd",
        "./scripts/99-start-services.cmd",
        "./data/vagrant.pub"
      ],
      "vboxmanage":
      [
        ["modifyvm", "{{.Name}}", "--memory", "{{user `mem_size`}}"],
        ["modifyvm", "{{.Name}}", "--cpus",   "{{user `cpus`}}"],
        ["setextradata", "{{.Name}}", "VBoxInternal/CPUM/CMPXCHG16B", "1"]
      ]
    }
  ],
  "provisioners":
  [
    {
      "type":        "file",
      "source":      "./data/inin-extras.zip",
      "destination": "C:/Windows/Temp/inin-extras.zip"
    },
    {
      "type":        "file",
      "source":      "/var/cache/daas/ICServer_2015_R2.msi",
      "destination": "C:/Windows/Temp/ICServer_2015_R2.msi"
    },
    {
      "type":        "file",
      "source":      "/var/cache/daas/InteractionFirmware_2015_R2.msi",
      "destination": "C:/Windows/Temp/InteractionFirmware_2015_R2.msi"
    },
    {
      "type":        "file",
      "source":      "./data/GeoTrust_Global_CA.pem",
      "destination": "C:/Windows/Temp/GeoTrust_Global_CA.pem"
    },
    { "type": "shell", "inline": [ "net accounts /maxpwage:unlimited" ] },
    { "type": "shell", "inline": [ "chocolatey update -y" ] },
    { "type": "shell", "inline": [ "chocolatey install -y dotnet3.5" ] },
    { "type": "shell", "inline": [ "chocolatey install -y sysinternals" ] },
    { "type": "shell", "inline": [ "chocolatey install -y git" ] },
    { "type": "shell", "inline": [ "chocolatey install -y vim" ] },
    { "type": "shell", "inline": [ "chocolatey install -y clover" ] },
    { "type": "shell", "inline": [ "chocolatey install -y classic-shell" ] },
    { "type": "shell", "inline": [ "chocolatey install -y puppet" ] },
    {
      "type":        "file",
      "source":      "./scripts/Get-Checksum.ps1",
      "destination": "C:/tools/sysinternals/Get-Checksum.ps1"
    },
    {
      "type":            "shell",
      "remote_path":     "/cygdrive/c/Windows/Temp/script.bat",
      "execute_command": "{{.Vars}} cmd /c C:/Windows/Temp/script.bat",
      "scripts":
      [
        "./scripts/install-ininextras.cmd",
        "./scripts/install-puppet-modules.cmd"
      ]
    },
    {
      "type":            "shell",
      "remote_path":     "/cygdrive/c/Windows/Temp/script-install-icserver.ps1",
      "execute_command": "{{.Vars}} powershell -NoLogo -ExecutionPolicy ByPass -File C:/Windows/Temp/script-install-icserver.ps1 -Verbose",
      "scripts":
      [
        "./scripts/install-icserver.ps1"
      ]
    },
    {
      "type":     "wait",
      "duration": "10m",
      "message":  "Giving ICServer install some air to breathe for 10 minutes..."
    },
    {
      "type":            "shell",
      "remote_path":     "/cygdrive/c/Windows/Temp/script.ps1",
      "execute_command": "{{.Vars}} powershell -NoLogo -ExecutionPolicy ByPass -File C:/Windows/Temp/script.ps1 -Verbose",
      "scripts":
      [
        "./scripts/check-icserver.ps1",
        "./scripts/install-icfirmware.ps1",
        "./scripts/install-vmhost-additions.ps1"
      ]
    },
    {
      "type":     "wait",
      "duration": "50s",
      "message":  "Waiting for the machine to reboot..."
    },
    {
      "type":   "shell",
      "only":   [ "vmware-iso" ],
      "start_retry_timeout": "5m",
      "inline": [ "rm -f /cygdrive/c/Users/vagrant/windows.iso" ]
    },
    {
      "type":   "shell",
      "only":   [ "virtualbox-iso" ],
      "start_retry_timeout": "5m",
      "inline": [ "rm -f /cygdrive/c/Users/vagrant/VBoxGuestAdditions.iso" ]
    },
    {
      "type":   "shell",
      "start_retry_timeout": "5m",
      "inline":
      [
        "rm -f /cygdrive/c/Windows/Temp/GeoTrust_Global_CA.pem",
        "rm -f /cygdrive/c/Windows/Temp/ICServer_2015_R1.msi",
        "rm -f /cygdrive/c/Windows/Temp/InteractionFirmware_2015_R1.msi",
        "rm -f /cygdrive/c/Windows/Temp/script*.ps1",
        "rm -f /cygdrive/c/Windows/Temp/script.bat"
      ]
    }
  ],
  "post-processors":
  [
    {
      "type": "vagrant",
      "keep_input_artifact": false,
      "compression_level":   1,
      "vagrantfile_template": "./templates/{{user `template`}}/vagrantfile.template",
      "output": "./boxes/{{user `template`}}/{{.Provider}}/{{user `template`}}-{{user `version`}}.box"
    }
  ]
}
